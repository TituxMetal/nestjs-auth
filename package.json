{
  "author": "Titux Metal (DEV) <github@lgdweb.fr>",
  "description": "Authentication system with access and refresh tokens using NestJS and Prisma",
  "license": "MIT",
  "name": "nestjs-auth",
  "repository": "https://github.com/TituxMetal/nestjs-auth",
  "version": "1.0.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "prisma:deploy": "prisma migrate deploy",
    "docker:down": "docker compose down",
    "docker:up": "docker compose up",
    "db:dev:restart": "yarn docker:down && yarn docker:up dev-db -d",
    "dev": "yarn start:dev",
    "predev": "yarn prisma:deploy",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "nest": "nest",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "env-cmd -f .env.test yarn prisma:deploy",
    "db:test:up": "docker compose up ",
    "db:test:restart": "yarn docker:down && yarn docker:up test-db -d",
    "test:e2e": "env-cmd -f .env.test jest --watch --no-cache --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "9.0.4",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.0.4",
    "@nestjs/jwt": "9.0.0",
    "@nestjs/passport": "9.0.0",
    "@nestjs/platform-express": "9.0.4",
    "@prisma/client": "4.1.0",
    "argon2": "0.28.7",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "passport": "0.6.0",
    "passport-jwt": "4.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.6"
  },
  "devDependencies": {
    "@nestjs/cli": "9.0.0",
    "@nestjs/schematics": "9.0.1",
    "@nestjs/testing": "9.0.4",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.6",
    "@types/node": "18.0.5",
    "@types/passport-jwt": "3.0.6",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "@typescript-eslint/parser": "5.30.7",
    "env-cmd": "10.1.0",
    "eslint": "8.20.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "28.1.3",
    "pactum": "3.1.13",
    "pactum-matchers": "1.1.2",
    "prettier": "2.7.1",
    "prisma": "4.1.0",
    "source-map-support": "0.5.21",
    "supertest": "6.2.4",
    "ts-jest": "28.0.7",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.4"
  },
  "jest": {
    "moduleNameMapper": {
      "~/(.*)$": "<rootDir>/../src/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
